generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum State {
  Disponible
  Ocupado
}

enum Surface {
  Polvo
  Cemento
  CespedNatural
  CespedSintetico
  Parquet
}

enum Sport {
  Tenis
  Basquet
  Futbol
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique @db.VarChar(255)
  fullname     String        @unique @db.VarChar(255)
  picture      String        @db.VarChar(255)
  admin        Boolean       @default(false)
  clubAdmin    Int?
  reservations Reservation[]
}

model Club {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(255)
  country     String        @db.VarChar(255)
  province    String        @db.VarChar(255)
  city        String        @db.VarChar(255)
  image       String        @db.VarChar(255)
  adminId     Int
  courts      Court[]
  sports      Sport[]
  Reservation Reservation[]
}

model Court {
  id           Int           @id @default(autoincrement())
  name         String        @db.VarChar(255)
  state        State         @default(Disponible)
  illuminated  Boolean       @default(false)
  club         Club          @relation(fields: [clubId], references: [id])
  clubId       Int
  sport        Sport
  reservations Reservation[]
}

//TODO: actualizar prisma y crear @min @max manualmente pq prisma es una cagada
model Reservation {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  duration        Int      @default(60)
  reservedMonth   String   @db.VarChar(255)
  reservedDay     String   @db.VarChar(255)
  reservedHour    String   @default("01") @db.VarChar(255)
  reservedMinutes String   @default("00") @db.VarChar(255)
  user            User     @relation(fields: [userId], references: [id])
  userId          Int
  club            Club     @relation(fields: [clubId], references: [id])
  clubId          Int
  court           Court    @relation(fields: [courtId], references: [id])
  courtId         Int
}
